---
// HeroSection.astro
---
<section class="hero">
  <!-- Navigation - Same as Homepage -->
  <header class="nav">
    <div class="logo">
      <img src="/logonoback250.png" alt="Natural Farm Secrets" />
      <span>Natural Farm Secrets</span>
    </div>
    <nav class="menu">
      <a href="/">Home</a>
      <a href="/#teachers">Teachers</a>
      <a href="/contact">Contact</a>
    </nav>
  </header>
  
  <video autoplay muted loop playsinline class="bg-video">
    <source src="/WheatField.mp4" type="video/mp4" />
    Your browser does not support the video tag.
  </video>
  
  <div class="hero-text">
    <h1>Farming Wisdom, AI-Powered</h1>
    <h2>Learn from avatars, rooted in soil and science</h2>
  </div>
</section>

<style>
.hero {
  position: relative;
  height: 620px;
  overflow: hidden;
  margin-top: 80px;
  margin-bottom: 20px;
}

.bg-video {
  position: absolute;
  top: 20px;
  left: 0;
  width: 100%;
  height: 620px;
  object-fit: cover;
  z-index: 0;
}

.hero-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: black;
  z-index: 2;
  font-family: 'Roboto', sans-serif;
  font-size: 20px;
}

/* Navigation - Same as Homepage */
.nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 20px 40px;
  background-color: rgba(22, 0, 138, 0.9);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
  height: 100px;
  box-sizing: border-box;
}

.logo {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-family: 'Roboto Serif', serif;
  font-weight: 300;
  font-size: 24px;
  cursor: pointer;
}

.logo img {
  height: 50px;
  width: auto;
}

.menu {
  display: flex;
  gap: 2rem;
  margin-right: 40px;
}

.menu a {
  font-family: 'Roboto Serif', serif;
  font-weight: 300;
  font-size: 18px;
  color: white;
  text-decoration: none;
  transition: opacity 0.3s ease;
}

.menu a:hover {
  opacity: 0.8;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelector('.logo').addEventListener('click', function() {
    window.location.href = '/';
  });
});
</script>